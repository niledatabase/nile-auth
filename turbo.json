{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": ["SENTRY_DSN", "NILEDB_NAME", "NILEDB_HOST", "NILEDB_USER", "NILEDB_PASSWORD", "NILEDB_PORT", "NODE_ENV", "LOG_LEVEL", "NEXTAUTH_URL", "POOL_TIMEOUT", "DISABLE_LOGGING"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "test": {
      "cache": false,
      "persistent": true
    },
    "start": {
      "dependsOn": ["^build"]
    }
  }
}
