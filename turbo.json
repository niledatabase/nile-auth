{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": ["DISABLE_LOGGING", "TINYBIRD_URL", "TINYBIRD_TOKEN", "NILEDB_POSTGRES_URL", "NILEDB_NAME", "NILEDB_HOST", "NILEDB_USER", "NILEDB_PASSWORD", "NILEDB_PORT", "NODE_ENV", "LOG_LEVEL", "NEXTAUTH_URL", "POOL_TIMEOUT", "BASE_PATH", "NEXTAUTH_SECRET"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "test": {
      "cache": false,
      "persistent": true
    },
    "start": {
      "dependsOn": ["^build"]
    }
  }
}
